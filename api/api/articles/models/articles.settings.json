{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Articles"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "body": {
      "type": "richtext",
      "required": true
    },
    "published": {
      "type": "boolean",
      "default": false
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "review",
        "blog"
      ],
      "required": true
    }
  }
}
