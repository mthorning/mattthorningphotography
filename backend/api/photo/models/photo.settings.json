{
  "kind": "collectionType",
  "collectionName": "photos",
  "info": {
    "name": "Photo"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "isPortrait": {
      "type": "boolean"
    },
    "exif": {
      "type": "json"
    },
    "description": {
      "type": "text"
    },
    "sell": {
      "type": "boolean",
      "default": true
    },
    "published": {
      "type": "boolean",
      "default": true
    },
    "cropSize": {
      "type": "component",
      "repeatable": false,
      "component": "photo.crop-size"
    },
    "showExif": {
      "type": "boolean",
      "default": true
    }
  }
}
